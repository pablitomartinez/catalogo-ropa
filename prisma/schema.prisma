generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producto {
  id                  Int       @id @default(autoincrement())
  nombre              String    @db.VarChar(255)
  descripcion         String
  descripcionCorta    String?   @db.VarChar(255)
  precio              Decimal   @db.Decimal(10, 2)
  cantidadStock       Int?      @default(0)
  categoria           String    @db.VarChar(50)
  enStock            Boolean?  @default(true)
  fecha_actualizacion DateTime? @default(now()) @db.Timestamp(6)
  fecha_creacion      DateTime? @default(now()) @db.Timestamp(6)
  imagenes            Imagen[]
  talles              Talle[]
}

model Imagen {
  id          Int       @id @default(autoincrement())
  url         String
  producto_id Int?
  producto    Producto? @relation(fields: [producto_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model Talle {
  id          Int       @id @default(autoincrement())
  talla       String    @db.VarChar(10)
  producto_id Int?
  producto    Producto? @relation(fields: [producto_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

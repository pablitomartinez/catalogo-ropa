generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model imagenes {
  id          Int        @id @default(autoincrement())
  url         String
  producto_id Int?
  productos   productos? @relation(fields: [producto_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model productos {
  id                  Int        @id @default(autoincrement())
  nombre              String     @db.VarChar(255)
  descripcion         String
  descripcionCorta   String?    @db.VarChar(255)
  precio              Decimal    @db.Decimal(10, 2)
  en_stock            Boolean?   @default(true)
  cantidadStock      Int?       @default(0)
  categoria           String     @db.VarChar(50)
  fecha_creacion      DateTime?  @default(now()) @db.Timestamp(6)
  fecha_actualizacion DateTime?  @default(now()) @db.Timestamp(6)
  imagenes            imagenes[]
  talles              talles[]
}

model talles {
  id          Int        @id @default(autoincrement())
  talla       String     @db.VarChar(10)
  producto_id Int?
  productos   productos? @relation(fields: [producto_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
